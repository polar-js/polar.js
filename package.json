{
    "name": "polarjs",
    "version": "0.2.0",
    "description": "TypeScript Game Engine",
    "author": "Alexander Brown",
    "license": "ISC",
    "main": "dist/Polar.js",
    "types": "dist/Polar.d.ts",
    "scripts": {
        "lint": "npx eslint . --ext .js,.jsx,.ts,.tsx",
        "serve": "npx serve tests",
        "watch": "npx webpack --env.NODE_ENV=local",
        "build:umd": "npx webpack -env.NODE_ENV=local --env.production",
        "build:docs": "npx github:polar-js/docgen",
        "build:js": "npx typescript src/Polar.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JellyAlex/polar.js.git"
    },
    "keywords": [
        "polar",
        "engine",
        "graphics",
        "webgl"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.6.0",
        "@typescript-eslint/parser": "^2.6.0",
        "eslint": "^6.6.0",
        "ts-loader": "^6.2.1",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "typedoc": "^0.15.0",
        "typescript": "^3.6.4",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.12"
    },
    "dependencies": {
        "@types/gl-matrix": "^2.4.5",
        "@types/p2": "^0.7.35",
        "@types/webgl2": "0.0.5",
        "gl-matrix": "^3.1.0",
        "maxrects-packer": "^2.5.0",
        "p2": "^0.7.1"
    }
}
