{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [ "es2017", "dom" ],
        "outDir": "./dist",
        "noImplicitAny": true,
        "downlevelIteration": true,
        "baseUrl": "./src/",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true
    },
    "include": [
        "src/*"
    ],
}