{
	"env": {
		"browser": true,
		"es6": true
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"indent": [ "error", "tab" ],
		"quotes": [ "error", "single" ],
		"semi": [ "error", "always" ],
		"linebreak-style": [1, "unix"]
	}
}